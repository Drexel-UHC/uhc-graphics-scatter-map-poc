@import "../utils/helpers"

secondary = #f1f1f1
min75col = #C75DAB
min90col = #D691C1
min100col = #E4C1D9
min110col = #A7D3D4
min125col = #42B7B9
min600col = #009B9E
fivepercgdp = #563C8F

.filler
	margin 0 auto
	padding 4rem 1rem 1.5rem 1rem
	max-width 60rem

.smallmap
	max-width 800px
	margin auto


/* STICKY SCROLL */
#scrolly-side .scrolly
	display flex

	& > *
		flex 1

	article
		display flex
		flex-direction column
		align-items center
		justify-content center

		padding-right 1rem
		max-width 30rem

		.step
			align-self center
			min-height 40vh
			margin-bottom 1rem
			transition background-color 500ms ease-in-out
			&:last-of-type
				margin-bottom 0
			&.is-active
					background-color secondary
			p
				margin 0
				padding 1rem

	figure.sticky
		position sticky
		width 100%
		height 100vhs
		margin 0
		top 0
		left 0
		transform translate3d(0,0,0)

/* MAP */
.mapcontainer
	position sticky
	top 0
	height 100vh

.graticule {
  fill: none;
  stroke: #cccccc;
  stroke-width: .5px;
}

.land {
	fill: #f1f1f1;
}

.region {
	stroke: #ffffff;
	stroke-width: 0.5px;
	transition fill 1000ms ease-in-out, opacity 250ms ease-in-out
}

.country {
	stroke #ffffff
	stroke-width 1px
	transition fill-opacity 1.5s
}

.capital {
	stroke: #ffffff;
	stroke-width: 1px;
	fill: #333333;
	fill-opacity: 1;
}

.chorolegend text.label, .toplegend text.label, .label-outside
	font-size 12px

.toplegend text.label
	fill white
	opacity 0.8

rect.swatch
	stroke #ffffff
	stroke-width 1px

.y-axis path
	display none

.y-axis .tick line
	stroke #eeeeee

.highlight, .textlegend
	border-radius 4px
	padding-right 3px
	padding-left 3px
	padding-top 2px
	padding-bottom 2px
	color #000000
	cursor pointer

.highlight
	background-color #dddddd

.textlegend-75
	background-color min75col
	color #ffffff

.textlegend-90
	background-color min90col
	color #ffffff

.textlegend-100
	background-color min100col

.textlegend-110
	background-color min110col

.textlegend-125
	background-color min125col
	color #ffffff

.textlegend-600
	background-color min600col
	color #ffffff

.textlegend-5perc
	background-color fivepercgdp
	color #ffffff

.y-axis .tick text
	font-size 2em